@model RoleRoleClaimsDto

@{
    ViewData["Title"] = "Details";
}

<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center">Department <b>Details</b></h2>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">

            <tbody>
                <tr>
                    <th>Role</th>
                    <td>@Model?.MediClinicRole.Name</td>
                </tr>
                <tr>
                    <th>Claims</th>
                    @foreach (var item in Model?.MediClinicRoleClaims)
                    {
                        <td style="display:block;">@item.ClaimType</td>
                    }
                </tr>
            </tbody>
        </table>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.MediClinicRole.Id" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
            |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>






