@model Appointment

@{
    ViewData["Title"] = "Details";
}


<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center mb-5">Appointment <b>Details</b></h2>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">

            <tbody>
                <tr>
                    <th>Sender</th>
                    <td>@Model?.Name</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@Model?.Phone</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model?.Email</td>
                </tr>
                <tr>
                    <th>Doctor</th>
                    <td>@ViewBag.DoctorId</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td>@Model?.Message</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>@Model?.Date?.ToString("dd MMMM yyyy, HH:mm")</td>
                </tr>
                <tr>
                    <th>Acceptableness</th>
                    @if (Model.IsAccepted == true)
                    {
                        <td>This appointment was accepted</td>
                    }
                    else
                    {
                        <td>This appointment wasn't accepted</td>
                    }

                </tr>
            </tbody>
        </table>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
            |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>





