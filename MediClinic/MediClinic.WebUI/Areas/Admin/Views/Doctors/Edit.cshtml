@model DoctorViewModel

@{
    var k = 0;
    var i = 0; 
    var c = 0;
    ViewData["Title"] = "Edit";
}

<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <h1>Doctor Edit</h1>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">FullName</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AboutContent" class="control-label"></label>
                        <textarea asp-for="AboutContent" class="form-control"></textarea>
                        <span asp-validation-for="AboutContent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Education" class="control-label"></label>
                        <input asp-for="Education" class="form-control" />
                        <span asp-validation-for="Education" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Speciality" class="control-label"></label>
                        <input asp-for="Speciality" class="form-control" />
                        <span asp-validation-for="Speciality" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Experience" class="control-label"></label>
                        <input asp-for="Experience" class="form-control" />
                        <span asp-validation-for="Experience" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Room" class="control-label"></label>
                        <input asp-for="Room" class="form-control" />
                        <span asp-validation-for="Room" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label class="control-label">
                            Image
                        </label>
                        <label for="file" class="image-input" data-imgurl="/uploads/images/@Model.ImgUrl">
                            <input name="fileTemp" value="@Model.ImgUrl" type="hidden" />
                            <span>x</span>
                        </label>
                        <input name="file" id="file" type="file" accept="image/x-png,image/gif,image/jpeg" />
                    </div>
                    <div>
                        <div id="weekDayBox">
                            <label asp-for="WorkTimeModels" class="control-label mt-5">Work Time</label>
                            @foreach (var item in Model.WorkTimeModels)
                            {
                                <div class="form-group weekDayAdd mb-3">
                                    <select asp-for="WorkTimeModels[i].WeekDay" class="form-control  mb-2" asp-items="ViewBag.WeekDayId"></select>
                                    <span style="font-size:12px;">Start Time</span>
                                    <input asp-for="WorkTimeModels[i].StartedTime" type="time" class="form-control start mt-0" />
                                    <span style="font-size:12px;">End Time</span>
                                    <input asp-for="WorkTimeModels[i].EndedTime" type="time" class="form-control end mt-0" />
                                    <input type="hidden" value="@item.Id" asp-for="WorkTimeModels[i].Id" />
                                    <i class="fa fa-trash removeWeek deleteItem" data-toggle="tooltip" title="Delete"></i>
                                </div>
                                i = i + 1;
                            }
                        </div>
                        <button type="button" class="btn btn-rounded btn-info addWeekDay">
                            <span class="btn-icon-left text-info">
                                <i class="fa fa-plus color-info"></i>
                            </span>Add Weekday
                        </button>
                    </div>
                    <div>
                        <div id="departmentBox">
                            <label asp-for="DepartmentIds" class="control-label mt-5">Departments</label>
                            <select style="display:none;" class="selectDepartmentIds" asp-items="ViewBag.DepartmentId"></select>
                                @foreach (var item in Model.DepartmentIds)
                                {
                                    <div class="form-group departmentIdAdd mb-3">
                                        <select asp-for="DepartmentIds[k]" class="form-control selectDepartmentIds-@k" asp-items="ViewBag.DepartmentId"></select>
                                        <i class="fa fa-trash removeDepartment deleteItem" data-toggle="tooltip" title="Delete"></i>
                                    </div>
                                    k = k + 1;
                                }
                        </div>
                        <button type="button" class="btn btn-rounded btn-info addDepartment">
                            <span class="btn-icon-left text-info">
                                <i class="fa fa-plus color-info"></i>
                            </span>Add Department
                        </button>
                    </div>
                    <div>
                        <div id="socialMediaBox">
                            <label asp-for="SocialMediaModels" class="control-label mt-5">Social Media</label>
                                @foreach (var item in Model.SocialMediaModels)
                                {
                                    <div class="form-group socialMediaAdd mb-3">
                                        <select asp-for="SocialMediaModels[c].Name" class="form-control">
                                            <option selected value="@item.Name"></option>
                                            <option>instagram</option>
                                            <option>mail</option>
                                            <option>linkedin</option>
                                            <option>facebook</option>
                                        </select>
                                        <input asp-for="SocialMediaModels[c].Url" class="form-control urlSocialMedia" placeholder="Url"/>
                                        <input type="hidden" value="@item.Id" asp-for="SocialMediaModels[c].Id" />
                                        <i class="fa fa-trash removeMedia deleteItem" data-toggle="tooltip" title="Delete"></i>
                                    </div>
                                    c = c + 1;
                                }
                            
                        </div>
                        <button type="button" class="btn btn-rounded btn-info addMedia">
                            <span class="btn-icon-left text-info">
                                <i class="fa fa-plus color-info"></i>
                            </span>Add Social Media
                        </button>
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary mt-5" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


