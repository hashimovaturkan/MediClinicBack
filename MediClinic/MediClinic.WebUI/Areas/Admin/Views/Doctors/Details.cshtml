@model Doctor

    @{
        ViewData["Title"] = "Details";
    }


    <div class="content-body">
        <!-- row -->
        <div class="container-fluid">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-12">
                            <h2 class="text-center">Doctor <b>Details</b></h2>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">

                <tbody>
                    <tr>
                        <th>Image</th>
                        <td>
                            <img src="~/uploads/images/@Model.ImgUrl" width="120" height="100" />
                        </td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>@Model?.Name</td>
                    </tr>
                    <tr>
                        <th>About Content</th>
                        <td>@Model.AboutContent?.PlainText()</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model?.Email</td>
                    </tr>
                    <tr>
                        <th>Education</th>
                        <td>@Model?.Education</td>
                    </tr>
                    <tr>
                        <th>Experience</th>
                        <td>@Model?.Experience</td>
                    </tr>
                    <tr>
                        <th>Speciality</th>
                        <td>@Model?.Speciality</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model?.Email</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Model?.Phone</td>
                    </tr>
                    <tr>
                        <th>Room</th>
                        <td>@Model?.Room</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>@Model?.Description</td>
                    </tr>
                    <tr>
                        <th>Social Media</th>
                        @foreach (var item in Model?.SocialMedia)
                        {
                            <td>@item.Name --------- @item.Url</td>
                        }
                    </tr>
                    <tr>
                        <th>Departments</th>
                        @foreach (var item in Model?.DoctorDepartmentRelation)
                        {
                            <td>@item.Department.Title</td>
                        }
                    </tr>
                    <tr>
                        <th>Work Time</th>
                        @foreach (var item in Model?.DoctorWorkTimeRelation)
                        {
                            <td>@item.WorkTime.WeekDay</td>
                            <td>@item.WorkTime.StartedTime - @item.WorkTime.EndedTime </td>
                        }
                    </tr>

                </tbody>
            </table>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
                |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>





