@model DoctorCreateCommand

@{
    ViewData["Title"] = "Create";
    var k = 0;
    var i = 0;
    //started ended datetime'da standart date qoy time'i deyishsin muqayiseye gore
}

<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <h1 class="mb-5">Create Doctor</h1>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">FullName</label>
                        <input asp-for="Name" class="form-control" placeholder="FullName"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AboutContent" class="control-label">About</label>
                        <textarea asp-for="AboutContent" id="Content" class="form-control"></textarea>
                        <span asp-validation-for="AboutContent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control"placeholder="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Education" class="control-label"></label>
                        <input asp-for="Education" class="form-control" placeholder="Education"/>
                        <span asp-validation-for="Education" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Speciality" class="control-label"></label>
                        <input asp-for="Speciality" class="form-control"placeholder="Speciality" />
                        <span asp-validation-for="Speciality" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Experience" class="control-label"></label>
                        <input asp-for="Experience" class="form-control" placeholder="Experience"/>
                        <span asp-validation-for="Experience" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Phone Number"/>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Room" class="control-label"></label>
                        <input asp-for="Room" class="form-control" placeholder="Room"/>
                        <span asp-validation-for="Room" class="text-danger"></span>
                    </div>
                    <div class="form-group ">
                        <label class="control-label">
                            Image
                        </label>
                        <label for="file" class="image-input">
                            <input name="fileTemp" value="" type="hidden" />
                            <span>x</span>
                        </label>
                        <input name="file" id="file" type="file" accept="image/x-png,image/gif,image/jpeg" />
                    </div>
                    <div>
                        <div id="weekDayBox">
                            <div class="form-group weekDayAdd mb-3">
                                <label asp-for="WorkTimeModels" class="control-label mt-3">Work Time</label>
                                <select asp-for="WorkTimeModels[i].WeekDay" class="form-control  mb-2" asp-items="ViewBag.WeekDayId"></select>
                                <span style="font-size:12px;">Start Time</span>
                                <input asp-for="WorkTimeModels[i].StartedTime" placeholder="Start Time" type="time" class="form-control start mt-0" />
                                <span style="font-size:12px;">End Time</span>
                                <input asp-for="WorkTimeModels[i].EndedTime" placeholder="End Time" type="time" class="form-control end mt-0" />
                            </div>
                        </div>
                        <button type="button" class="btn btn-rounded mb-5 btn-info addWeekDay">
                            <span class="btn-icon-left text-info">
                                <i class="fa fa-plus color-info"></i>
                            </span>Add Work Time
                        </button>
                    </div>
                    <div>
                        <div id="departmentBox">
                            <div class="form-group departmentIdAdd mb-3">
                                <label asp-for="DepartmentIds" class="control-label mt-3">Departments</label>
                                <select asp-for="DepartmentIds[k]" class="form-control selectDepartmentIds" asp-items="ViewBag.DepartmentId"></select>
                            </div>
                        </div>
                        <button type="button" class="btn btn-rounded mb-5 btn-info addDepartment">
                            <span class="btn-icon-left text-info">
                                <i class="fa fa-plus color-info"></i>
                            </span>Add Department
                        </button>
                    </div>
                    <div>
                        <div id="socialMediaBox">
                            <div class="form-group socialMediaAdd mb-3">
                                <label asp-for="SocialMediaModels" class="control-label mt-3">Social Media</label>
                                <select asp-for="SocialMediaModels[0].Name" class="form-control">
                                    <option>instagram</option>
                                    <option>mail</option>
                                    <option>linkedin</option>
                                    <option>facebook</option>
                                </select>
                                <input asp-for="SocialMediaModels[0].Url" placeholder="Url" class="form-control" />
                            </div>
                        </div>
                        <button type="button" class="btn btn-rounded mb-5 btn-info addMedia">
                            <span class="btn-icon-left text-info">
                                <i class="fa fa-plus color-info"></i>
                            </span>Add Social Media
                        </button>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success mt-5">Create</button>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


