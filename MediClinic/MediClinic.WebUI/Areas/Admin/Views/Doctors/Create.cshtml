@section addjs{
    @*started ended datetime'da standart date qoy time'i deyishsin muqayiseye gore*@
    <script src="~/libs/ckeditor5/ckeditor.js"></script>
    <script src="~/libs/jquery-image-input/jquery.image-input.js"></script>

    <script>
        $(document).ready(function () {
            ClassicEditor
                .create(document.querySelector('#Content'))
                .catch(error => {
                    console.error(error);
                });
        })
    </script>
    <script>
        $(document).ready(function () {
            var c = 1;
            $(".addWeekDay").click(function (e) {
                e.preventDefault();
                var a = '<div class="form-group weekDayAdd"><select class="form-control valid mb-2" id="WorkTimeModels_' + c + '__WeekDay" name="WorkTimeModels[' + c + '].WeekDay" aria-invalid="false"><option>Monday</option><option>Tuesday</option><option>Wednesday</option><option>Thursday</option><option>Friday</option><option>Saturday</option></select><span style="font-size:12px;">Start Time</span><input type="time" class="form-control start mt-0" placeholder="Start Time" id="WorkTimeModels_' + c + '__StartedTime" name="WorkTimeModels[' + c + '].StartedTime"><span style="font-size:12px;">End Time</span><input type="time" placeholder="End Time" class="form-control end mt-0" id="WorkTimeModels_' + c + '__EndedTime" name="WorkTimeModels[' + c + '].EndedTime"><i class="fa fa-trash removeWeek deleteItem" data-toggle="tooltip" title="Delete"></i></div>';
                $("#weekDayBox").append(a);
                c = c + 1;
                $(".removeWeek").click(function (e) {
                    $(this).parent(".weekDayAdd").css("display", "none");
                    $(this).parent(".weekDayAdd").find("select option:selected").val("");
                    $(this).parent(".weekDayAdd").find("input.start").val("");
                    $(this).parent(".weekDayAdd").find("input.end").val("");


                })
            })

        })

        $(document).ready(function () {
            var l = 1;
            $(".addDepartment").click(function (e) {
                e.preventDefault();
                console.log("a")
                var a = '<div class="form-group departmentIdAdd"><select class="form-control selectDepartmentIds-' + l + ' valid" data-val="true" data-val-required="The Department is required." id="DepartmentIds_' + l + '_" name="DepartmentIds[' + l + ']" aria-describedby="DepartmentIds_' + l + '_-error" aria-invalid="false"></select><i class="fa fa-trash removeDepartment deleteItem" data-toggle="tooltip" title="Delete"></i></div>';
                $("#departmentBox").append(a);
                $(".selectDepartmentIds-" + l + "").append($(".selectDepartmentIds").html());
                l = l + 1;
                $(".removeDepartment").click(function (e) {
                    $(this).parent(".departmentIdAdd").css("display", "none");
                    $(this).parent(".departmentIdAdd").find("select option:selected").val(0);
                })
            })
        })

        $(document).ready(function () {
            var f = 1;
            $(".addMedia").click(function (e) {
                e.preventDefault();
                var a = '<div class="form-group socialMediaAdd"><select class="form-control valid" id="SocialMediaModels_' + f + '__Name" name="SocialMediaModels[' + f + '].Name" aria-invalid="false"><option>instagram</option><option>mail</option><option>linkedin</option><option>facebook</option></select ><input placeholder="Url" class="form-control" type="text" id="SocialMediaModels_' + f + '__Url" name="SocialMediaModels[' + f + '].Url"><i class="fa fa-trash removeMedia deleteItem" data-toggle="tooltip" title="Delete"></i></div > ';
                $("#socialMediaBox").append(a);
                f = f + 1;
                $(".removeMedia").click(function (e) {
                    $(this).parent(".socialMediaAdd").css("display", "none");
                    $(this).parent(".socialMediaAdd").find("select option:selected").val("");
                    $(this).parent(".socialMediaAdd").find("input").val("");
                })
            })
        })
    </script>
}







